{
  "name": "awesome-graphql-client",
  "version": "0.13.0",
  "description": "GraphQL Client with file upload support for NodeJS and browser",
  "keywords": [
    "graphql",
    "request",
    "graphql-client",
    "apollo"
  ],
  "homepage": "https://github.com/lynxtaa/awesome-graphql-client#readme",
  "repository": "https://github.com/lynxtaa/awesome-graphql-client.git",
  "license": "MIT",
  "author": "Alex Kondratyuk <lynxtaa@gmail.com>",
  "sideEffects": false,
  "exports": {
    "require": "./dist/index.js",
    "default": "./dist/index.modern.mjs"
  },
  "main": "./dist/index.js",
  "unpkg": "./dist/index.umd.js",
  "module": "./dist/index.m.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist/*",
    "build": "microbundle build --tsconfig tsconfig.build.json",
    "check-format": "npm run prettier -- --check",
    "check-types": "tsc",
    "format": "npm run prettier -- --write",
    "lint": "eslint --ext .js,.ts src test",
    "prepublishOnly": "npm run build",
    "prettier": "prettier \"{src,test}/**/*\" \"*.{js,json,md}\"",
    "release": "standard-version",
    "test": "is-ci-cli \"test:coverage\" \"test:watch\"",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "validate": "npm run check-format && npm run check-types && npm run lint"
  },
  "simple-git-hooks": {
    "pre-commit": "npx pretty-quick --staged"
  },
  "prettier": "@lynxtaa/prettier-config",
  "eslintConfig": {
    "extends": "@lynxtaa/eslint-config",
    "root": true
  },
  "devDependencies": {
    "@graphql-typed-document-node/core": "3.1.1",
    "@lynxtaa/eslint-config": "^0.5.3",
    "@lynxtaa/prettier-config": "^0.1.1",
    "@swc/core": "^1.3.10",
    "@swc/jest": "^0.2.23",
    "@types/extract-files": "8.1.1",
    "@types/graphql-upload": "^8.0.12",
    "@types/jest": "29.2.0",
    "@types/node-fetch": "^2.5.12",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.26.0",
    "extract-files": "9.0.0",
    "fastify": "^3.27.1",
    "form-data": "4.0.0",
    "graphql": "16.6.0",
    "graphql-tag": "2.12.6",
    "graphql-upload": "13.0.0",
    "http-terminator": "^3.2.0",
    "is-ci-cli": "2.2.0",
    "jest": "^29.2.1",
    "jest-environment-jsdom": "^29.2.1",
    "mercurius": "^9.3.1",
    "mercurius-upload": "^3.0.1",
    "microbundle": "0.15.1",
    "node-fetch": "^2.6.7",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "simple-git-hooks": "^2.8.1",
    "standard-version": "9.5.0",
    "typescript": "4.8.4",
    "undici": "^5.11.0",
    "whatwg-fetch": "3.6.2"
  }
}

{
	"compilerOptions": {
		"target": "es5",
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"noUnusedLocals": true
	},
	"include": ["src"]
}
